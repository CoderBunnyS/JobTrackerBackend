
extends layout

block content

  h1 Delete Category: #{category.name}
  
  if category_jobs.length
  
    p #[strong Delete the following jobs before attempting to delete this category.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Jobs
    
      dl
      each job in category_jobs
        dt 
          a(href=job.url) #{job.title}
        dd #{job.summary}

  else
    p Do you really want to delete this Category?
    
    form(method='POST' action='')
      div.form-group
        input#id.form-control(type='hidden',name='id', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete