extends layout

block content

  h1 #{title}: #{user.name}
  //p= user.email
  
  if user_jobs.length
  
    p #[strong Delete the following jobs before attempting to delete this user.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Jobs
    
      dl
      each job in user_jobs
        dt 
          a(href=job.url) #{job.title}
        dd #{job.company}

  else
    p Do you really want to delete this User?
    
    form(method='POST' action='')
      div.form-group
        input#userid.form-control(type='hidden',name='userid', required='true', value=user._id )

      button.btn.btn-primary(type='submit') Delete